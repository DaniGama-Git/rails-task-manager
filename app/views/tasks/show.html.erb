<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><strong>Status:</strong> <%= @task.completed ? 'Completed' : 'Incomplete' %></p>

<%= link_to "Edit #{@task.title}", edit_path(@task) %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
